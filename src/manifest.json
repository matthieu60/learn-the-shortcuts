{
  "name": "Learn the shortcuts",
  "short_name": "LTS",
  "icons": {
    "128": "icons/logo-128.png",
    "48": "icons/logo-48.png",
    "16": "icons/logo-16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "shortcuts.ts",
        "gmail.ts"
      ]
    },
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "shortcuts.ts",
        "github.ts"
      ]
    },
    {
      "matches": [
        "https://trello.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "shortcuts.ts",
        "trello.ts"
      ]
    },
    {
      "matches": [
        "https://calendar.google.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "shortcuts.ts",
        "google-calendar.ts"
      ]
    }
  ]
}
